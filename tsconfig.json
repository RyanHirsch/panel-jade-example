{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "lib": ["es2018", "dom"],
    "target": "es6",
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": "."
  },
  "exclude": ["./node_modules"]
}
